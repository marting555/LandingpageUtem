---
const planYears = [
  {
    year: '1° año',
    core: ['Fundamentos de Programación', 'Álgebra y Cálculo para Computación', 'Ciudadanía y Ética Profesional'],
    complementary: ['Vida y Bienestar', 'Tecnología y Sostenibilidad con Responsabilidad Social']
  },
  {
    year: '2° año',
    core: ['Estructuras de Datos y Algoritmos', 'Bases de Datos', 'Taller de Integración I'],
    complementary: ['Comunicación Efectiva', 'Electivo de especialidad']
  },
  {
    year: '3° año',
    core: ['Ingeniería de Software', 'Arquitectura de Sistemas', 'Electivo de Innovación Tecnológica'],
    complementary: ['Inteligencia Artificial', 'Seguridad Informática']
  },
  {
    year: '4° año',
    core: ['Ciencia de Datos Aplicada', 'Gestión de Proyectos TI', 'Taller de Titulación'],
    complementary: ['Práctica Profesional Supervisada', 'Seminario de Empleabilidad']
  }
];
---

<section id="plan" class="py-10">
  <div class="max-w-6xl mx-auto px-4">
    <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between gap-6 mb-10">
      <div>
        <span class="inline-flex items-center gap-2 rounded-full bg-slate-200 px-3 py-1 text-xs font-semibold uppercase tracking-wide text-utemBlue">
          Plan de estudios
        </span>
        <h2 class="mt-4 text-3xl font-bold text-slate-900">Malla curricular por año</h2>
        <p class="mt-3 text-slate-600 text-sm sm:text-base max-w-xl">
          El itinerario formativo combina fundamentos de programación, arquitectura de software, ciencia de datos y asignaturas complementarias para desarrollar profesionales integrales.
        </p>
      </div>
      <a
        href="https://admision.utem.cl/"
        target="_blank"
        class="inline-flex items-center gap-2 rounded-lg border border-utemBlue px-4 py-2 text-sm font-semibold text-utemBlue hover:bg-utemBlue hover:text-white transition"
      >
        Descargar ficha oficial
      </a>
    </div>

    <div class="overflow-hidden rounded-3xl border border-slate-200 bg-white shadow-md">
      <div class="grid grid-cols-1 divide-y divide-slate-100">
        {planYears.map(({ year, core, complementary }) => (
          <div class="grid gap-6 lg:grid-cols-2 p-6" key={year}>
            <div>
              <h3 class="text-lg font-semibold text-slate-900">{year} · Línea de programación</h3>
              <ul class="mt-3 space-y-2 text-sm text-slate-600">
                {core.map((item) => (
                  <li key={item}>• {item}</li>
                ))}
              </ul>
            </div>
            <div class="rounded-2xl bg-slate-50 p-5">
              <h4 class="text-sm font-semibold text-utemBlue uppercase tracking-wide">
                Formación complementaria
              </h4>
              <ul class="mt-3 space-y-2 text-sm text-slate-600">
                {complementary.map((item) => (
                  <li key={item}>• {item}</li>
                ))}
              </ul>
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>
